{
  "name": "hexo-github",
  "displayName": "hexo-github",
  "description": "A VSCode extension for managing Hexo blogs with GitHub integration.",
  "version": "0.0.1",
  "publisher": "Jyuhou Huang 黄宇豪 <jyuhou.wong@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jyuhou-wong/hexo-github.git"
  },
  "homepage": "https://blog.hyh.ltd",
  "author": "Jyuhou Huang 黄宇豪 <jyuhou.wong@gmail.com>",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:hexo-github-blogs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hexo-github-explorer",
          "title": "Hexo GitHub Explorer",
          "icon": "resources/hexo-github-explorer.svg"
        }
      ]
    },
    "views": {
      "hexo-github-explorer": [
        {
          "id": "hexo-github-blogs",
          "name": "Blogs"
        }
      ]
    },
    "commands": [
      {
        "command": "hexo-github.loginToGitHub",
        "title": "Login to GitHub"
      },
      {
        "command": "hexo-github.pullHexoRepo",
        "title": "Pull Hexo Repository"
      },
      {
        "command": "hexo-github.pushHexoRepo",
        "title": "Push Hexo Repository"
      },
      {
        "command": "hexo-github.cmd",
        "title": "Hexo cmd"
      },
      {
        "command": "hexo-github.startServer",
        "title": "Start server"
      },
      {
        "command": "hexo-github.stopServer",
        "title": "Stop server"
      },
      {
        "command": "hexo-github.new",
        "title": "New blog"
      },
      {
        "command": "hexo-github.localPreview",
        "title": "Local preview"
      },
      {
        "command": "hexo-github.deploy",
        "title": "Deploy blog"
      },
      {
        "command": "hexo-github.test",
        "title": "Test"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "hexo-github.localPreview",
          "when": "view == hexo-github-blogs",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "hexo-github.pullHexoRepo",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.pushHexoRepo",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.loginToGitHub",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.startServer",
          "group": "hexo-github",
          "when": "hexo-github.serverStatus == false"
        },
        {
          "command": "hexo-github.stopServer",
          "group": "hexo-github",
          "when": "hexo-github.serverStatus == true"
        },
        {
          "command": "hexo-github.new",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.localPreview",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.deploy",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.test",
          "group": "hexo-github"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.42",
    "@types/express": "^5.0.0",
    "@types/graceful-fs": "^4.1.9",
    "@types/minimist": "^1.2.5",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/nunjucks": "^3.2.6",
    "@types/titlecase": "^1.1.2",
    "@types/unzipper": "^0.10.10",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "axios": "^1.7.7",
    "express": "^4.21.1",
    "hexo": "^7.3.0",
    "minimist": "^1.2.8",
    "open": "^8.4.2",
    "simple-git": "^3.27.0",
    "unzipper": "^0.12.3"
  }
}
