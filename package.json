{
  "name": "hexo-github",
  "displayName": "Hexo GitHub",
  "description": "A VSCode extension for managing Hexo blogs with seamless GitHub integration and intuitive visual operations.",
  "version": "2.0.9",
  "icon": "icon.png",
  "publisher": "jyuhou-wong",
  "repository": {
    "type": "git",
    "url": "https://github.com/jyuhou-wong/hexo-github.git"
  },
  "homepage": "https://blog.hyh.ltd",
  "author": "Jyuhou Wong 黃宇豪 <jyuhou.wong@gmail.com>",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Productivity",
    "Utilities"
  ],
  "keywords": [
    "hexo",
    "github",
    "vscode",
    "blog",
    "extension",
    "markdown",
    "git",
    "web development"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "hexo-github-explorer": [
        {
          "id": "hexo-github-blogs",
          "name": "Blogs"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hexo-github-explorer",
          "title": "Hexo GitHub",
          "icon": "resources/hexo-github-explorer.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "hexo-github-blogs",
        "contents": "Not logged in, please login to GitHub first.\n[Login to GitHub](command:hexo-github.loginToGitHub)",
        "when": "!hexo-github.isLogin"
      }
    ],
    "commands": [
      {
        "command": "hexo-github.refreshTreeview",
        "title": "Refresh treeview"
      },
      {
        "command": "hexo-github.openSourceGit",
        "icon": {
          "dark": "resources/dark/hexo-github-github.svg",
          "light": "resources/light/hexo-github-github.svg"
        },
        "title": "Open Source Repository"
      },
      {
        "command": "hexo-github.openPageGit",
        "icon": {
          "dark": "resources/dark/hexo-github-pages-git.svg",
          "light": "resources/light/hexo-github-pages-git.svg"
        },
        "title": "Open Pages Repository"
      },
      {
        "command": "hexo-github.openPage",
        "icon": {
          "dark": "resources/dark/hexo-github-home.svg",
          "light": "resources/light/hexo-github-home.svg"
        },
        "title": "Open GitHub Pages"
      },
      {
        "command": "hexo-github.loginToGitHub",
        "title": "Login to GitHub"
      },
      {
        "command": "hexo-github.pullHexo",
        "title": "Pull from GitHub",
        "icon": {
          "dark": "resources/dark/hexo-github-pull.svg",
          "light": "resources/light/hexo-github-pull.svg"
        }
      },
      {
        "command": "hexo-github.pushHexo",
        "title": "Push to GitHub",
        "icon": {
          "dark": "resources/dark/hexo-github-push.svg",
          "light": "resources/light/hexo-github-push.svg"
        }
      },
      {
        "command": "hexo-github.cmd",
        "title": "Hexo cmd"
      },
      {
        "command": "hexo-github.localPreview",
        "icon": {
          "dark": "resources/dark/hexo-github-preview.svg",
          "light": "resources/light/hexo-github-preview.svg"
        },
        "title": "Preview"
      },
      {
        "command": "hexo-github.addTheme",
        "icon": {
          "dark": "resources/dark/hexo-github-add.svg",
          "light": "resources/light/hexo-github-add.svg"
        },
        "title": "Add theme"
      },
      {
        "command": "hexo-github.addItem",
        "icon": {
          "dark": "resources/dark/hexo-github-add.svg",
          "light": "resources/light/hexo-github-add.svg"
        },
        "title": "Add"
      },
      {
        "command": "hexo-github.publish",
        "icon": {
          "dark": "resources/dark/hexo-github-publish.svg",
          "light": "resources/light/hexo-github-publish.svg"
        },
        "title": "Publish"
      },
      {
        "command": "hexo-github.deleteItem",
        "icon": {
          "dark": "resources/dark/hexo-github-delete.svg",
          "light": "resources/light/hexo-github-delete.svg"
        },
        "title": "Delete"
      },
      {
        "command": "hexo-github.deleteTheme",
        "icon": {
          "dark": "resources/dark/hexo-github-delete.svg",
          "light": "resources/light/hexo-github-delete.svg"
        },
        "title": "Delete theme"
      },
      {
        "command": "hexo-github.addSite",
        "icon": {
          "dark": "resources/dark/hexo-github-add.svg",
          "light": "resources/light/hexo-github-add.svg"
        },
        "title": "Add site"
      },
      {
        "command": "hexo-github.deleteSite",
        "icon": {
          "dark": "resources/dark/hexo-github-delete.svg",
          "light": "resources/light/hexo-github-delete.svg"
        },
        "title": "Delete site"
      },
      {
        "command": "hexo-github.deploy",
        "icon": {
          "dark": "resources/dark/hexo-github-deploy.svg",
          "light": "resources/light/hexo-github-deploy.svg"
        },
        "title": "Deploy blog"
      },
      {
        "command": "hexo-github.applyTheme",
        "icon": {
          "dark": "resources/dark/hexo-github-apply.svg",
          "light": "resources/light/hexo-github-apply.svg"
        },
        "title": "Apply theme"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hexo-github.pullHexo",
          "when": "view == hexo-github-blogs && hexo-github.isLogin",
          "group": "navigation"
        },
        {
          "command": "hexo-github.pushHexo",
          "when": "view == hexo-github-blogs && hexo-github.isLogin",
          "group": "navigation"
        },
        {
          "command": "hexo-github.addSite",
          "when": "view == hexo-github-blogs && hexo-github.isLogin",
          "group": "navigation"
        },
        {
          "command": "hexo-github.openSourceGit",
          "when": "view == hexo-github-blogs && hexo-github.isLogin",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "hexo-github.deploy",
          "when": "view == hexo-github-blogs && viewItem == site",
          "group": "inline"
        },
        {
          "command": "hexo-github.openPageGit",
          "when": "view == hexo-github-blogs && viewItem == site",
          "group": "inline"
        },
        {
          "command": "hexo-github.openPage",
          "when": "view == hexo-github-blogs && viewItem == site",
          "group": "inline"
        },
        {
          "command": "hexo-github.deleteSite",
          "when": "view == hexo-github-blogs && viewItem == site",
          "group": "inline"
        },
        {
          "command": "hexo-github.addTheme",
          "when": "view == hexo-github-blogs && viewItem == themes",
          "group": "inline"
        },
        {
          "command": "hexo-github.applyTheme",
          "when": "view == hexo-github-blogs && viewItem == theme",
          "group": "inline"
        },
        {
          "command": "hexo-github.deleteTheme",
          "when": "view == hexo-github-blogs && viewItem == theme",
          "group": "inline"
        },
        {
          "command": "hexo-github.localPreview",
          "when": "view == hexo-github-blogs && (viewItem == page || viewItem == md)",
          "group": "inline"
        },
        {
          "command": "hexo-github.addItem",
          "when": "view == hexo-github-blogs && (viewItem == pages || viewItem == drafts || viewItem == posts || viewItem == folder)",
          "group": "inline"
        },
        {
          "command": "hexo-github.publish",
          "when": "view == hexo-github-blogs && (viewItem == draft)",
          "group": "inline"
        },
        {
          "command": "hexo-github.deleteItem",
          "when": "view == hexo-github-blogs && !(viewItem == site || viewItem == config || viewItem == themes || viewItem == theme || viewItem == pages || viewItem == drafts || viewItem == posts)",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "hexo-github.loginToGitHub",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.localPreview",
          "when": "resourceLangId == markdown",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.deploy",
          "group": "hexo-github"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.42",
    "@types/express": "^5.0.0",
    "@types/graceful-fs": "^4.1.9",
    "@types/minimist": "^1.2.5",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/nunjucks": "^3.2.6",
    "@types/titlecase": "^1.1.2",
    "@types/unzipper": "^0.10.10",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "axios": "^1.7.7",
    "chokidar": "^3.6.0",
    "express": "^4.21.1",
    "hexo": "^7.3.0",
    "minimist": "^1.2.8",
    "open": "^8.4.2",
    "simple-git": "^3.27.0",
    "unzipper": "^0.12.3"
  }
}
