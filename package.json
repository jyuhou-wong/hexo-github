{
  "name": "hexo-github",
  "displayName": "hexo-github",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hexo-github.loginToGitHub",
        "title": "Login to GitHub"
      },
      {
        "command": "hexo-github.pullHexoRepo",
        "title": "Pull Hexo Repository"
      },
      {
        "command": "hexo-github.pushHexoRepo",
        "title": "Push Hexo Repository"
      },
      {
        "command": "hexo-github.cmd",
        "title": "Hexo cmd"
      },
      {
        "command": "hexo-github.startServer",
        "title": "Start server"
      },
      {
        "command": "hexo-github.stopServer",
        "title": "Stop server"
      },
      {
        "command": "hexo-github.new",
        "title": "New blog"
      },
      {
        "command": "hexo-github.localPreview",
        "title": "Local preview"
      },
      {
        "command": "hexo-github.deploy",
        "title": "Deploy blog"
      },
      {
        "command": "hexo-github.test",
        "title": "Test"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "hexo-github.pullHexoRepo",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.pushHexoRepo",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.loginToGitHub",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.startServer",
          "group": "hexo-github",
          "when": "hexo-github.serverStatus == false"
        },
        {
          "command": "hexo-github.stopServer",
          "group": "hexo-github",
          "when": "hexo-github.serverStatus == true"
        },
        {
          "command": "hexo-github.new",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.localPreview",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.deploy",
          "group": "hexo-github"
        },
        {
          "command": "hexo-github.test",
          "group": "hexo-github"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "axios": "^1.7.7",
    "express": "^4.21.1",
    "hexo": "^7.3.0",
    "minimist": "^1.2.8",
    "open": "^10.1.0",
    "simple-git": "^3.27.0",
    "unzipper": "^0.12.3"
  }
}
